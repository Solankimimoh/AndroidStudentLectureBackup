<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <CheckBox
        android:id="@+id/activity_main_dance_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dance" />

    <CheckBox
        android:id="@+id/activity_main_sport_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sport" />

    <SeekBar
        android:id="@+id/activity_main_color_sk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:max="100"
        android:progress="0" />

    <EditText
        android:textSize="25sp"
        android:id="@+id/activity_main_date_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/date" />

    <Button
        android:id="@+id/activity_main_date_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date" />

    <EditText
        android:textSize="25sp"
        android:id="@+id/activity_main_time_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/time" />

    <Button
        android:id="@+id/activity_main_time_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/time" />
</LinearLayout>